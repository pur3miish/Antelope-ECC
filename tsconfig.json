{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": ".", // Use a 'dist' folder for compiled files
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "dist" // Place declaration files in the 'dist' folder
  },
  "include": ["src/**/*", "test/**/*"], // Include both src and test directories
  "exclude": ["node_modules"]
}
