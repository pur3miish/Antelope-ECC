{
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "env": {
    "es2022": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["simple-import-sort"],
  "rules": {
    "prefer-const": "off",
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  },
  "ignorePatterns": [".js", "internal/*.js", "keys/*.js"]
}
